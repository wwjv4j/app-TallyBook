<!-- 每个简易账单记录的布局,内容有金额,分类,备注 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_billing_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_category_button">

    <ImageView
            android:id="@+id/simple_billing_history_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="7dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/simple_billing_history_icon"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/simple_billing_history_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账单"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/simple_billing_history_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/simple_billing_history_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加账单sssssssssssssssssssssssssssssssssssssssssss"
            android:textSize="18sp"/>
        <!-- 添加一个空行 -->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />
</RelativeLayout>   